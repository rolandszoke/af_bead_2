{% extends "layout" %}



{% block content %}

<h1>{{ name }}</h1>

<div class="row">

  {% for category in categories %}
  {% if (category.topMovies.length > 0)%}
  <div class="col-lg-4 col-md-6 col-sm-12">
    <div class="panel panel-primary">
      <div class="panel-heading">{{ category.name }}</div>
      <ul class="list-group">
        {% for movie in category.topMovies %}
        <li class="list-group-item">
          <a href="/movies/{{ movie.id }}">
            {{ movie.name }}
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  {% endif %}
  {% endfor %}

</div>

{% block styles %}
<link rel="stylesheet" href="/clock.css">
<div class="clock"><div class="clock-face">
  <div class="hand hour-hand"><div class="timer"></div></div>
  <div class="hand min-hand"><div class="timer"></div></div>
  <div class="hand second-hand"><div class="timer"></div></div>
</div></div>
{% endblock %}

{% endblock %}
